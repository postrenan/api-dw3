}

/// @@allow('all', true)
model Estoque {
  id        String    @id() @default(uuid())
  itemId    String
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt()
  item      Item      @relation(fields: [itemId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}

/// @@allow('all', true)
model Categoria {
  id            String          @id()
  nome          String
